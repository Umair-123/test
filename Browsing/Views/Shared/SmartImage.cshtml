@using System.Runtime.InteropServices
@using InternetTicketing.Browsing.ViewModels
@model InternetTicketing.Browsing.ViewModels.SmartImageViewModel


@if (Model.PreLoad)
{
    <div class="@Model.CssName smart-image preload-image" data-preload-target="background-image" data-image-url="@Model.Url">
        <img class="fallback-image preload-image" data-preload-target="src" data-image-url="@Model.Url" />
    </div>
}
else
{
    <div class="@Model.CssName smart-image" style="background-image: url('@Model.Url');">
        <img class="fallback-image" src="@Model.Url" />
    </div>
}
