@using InternetTicketing.Infrastructure.Routing
@using InternetTicketing.Infrastructure.SocialMedia
@using Vista.Cdn.Client
@using Vista.Web
@using Vista.Web.Extensions

@model HomeViewModel

@section Css {
    @ContentDelivery.Css("PhotoGalleryCommon.css")
    @ContentDelivery.Css("Validation.css")
    @ContentDelivery.Css("ImageResize.css")
    @ContentDelivery.Css("Loyalty/SignIn.css")
    @ContentDelivery.Css("Browsing/GiftCardBalanceInquiry.css")
}

@section OpenGraphMetadata
{
    @Html.Raw(SocialMediaHtmlHelper.OpenGraphMetadata(Shared.SiteTitle, "website", Request.Url.AbsoluteUri, "", Shared.CompanyName))
}

@section Scripts {
    <script type="text/javascript">
        
        Vista.Urls.Home = {};
        Vista.Urls.Home.NowShowing = '@Url.Action("NowShowing", "Home")';
        Vista.Urls.Home.ComingSoon = '@Url.Action("ComingSoon", "Home")';
        Vista.Urls.Home.MovieDetails = '@Url.Action("Details", "Movies")/';
        Vista.Urls.Home.MovieImage = '{1}';
        Vista.Urls.Home.RatingImage = '@Html.Raw(ContentDelivery.GetEntityImageUrlFormatForClientScript(CdnMediaType.RatingIconGraphic, "{3}", EntityReferenceScheme.Global, new Size(22, 22)))';

        Vista.Lang.Home = {};
        Vista.Lang.Home.BuyTickets = @Html.Raw(Home.BuyTickets.ToJson());
        Vista.Lang.Home.MoreInfo = @Html.Raw(Home.MoreInfo.ToJson());
        
        Vista.Lang.GiftCardBalanceInquiry = {};
        Vista.Lang.GiftCardBalanceInquiry.GeneralError = @Html.Raw(GiftCardBalanceInquiry.GeneralError.ToJson());
    </script>
           
	@ContentDelivery.ScriptBundle(JsBundles.BrowsingHomeScripts)
	@ContentDelivery.ScriptBundle(JsBundles.Validation)
}

